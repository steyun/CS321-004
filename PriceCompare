import java.math.BigDecimal;
import java.text.NumberFormat;
import java.util.Scanner;
import java.io.*;

/**
* @author Kelly Glebus
* Compare function for html scraper,
* checks if the value is less than or equal to
* the target price 
*/


public class priceCompare{
  /**
  * Reads in the text file, moves to the last line and parses
  * for the double that represents the current price. Checks if 
  * it is less than or equal to target 
  * @param double target price
  * @param File file name
  * @return boolean if it is less than or equal to the target
  */
    public static boolean comparePrice(double targetPrice, File file) throws FileNotFoundException{
      Scanner sc = new Scanner(file);
      String lastValue = "";
      while(sc.hasNextLine()){
        lastValue = sc.nextLine();
      }
      Scanner sc2 = new Scanner(lastValue);
      double price = sc2.nextDouble();
      if(price <= targetPrice){
        return true;
      }
      return false;
    }
}
